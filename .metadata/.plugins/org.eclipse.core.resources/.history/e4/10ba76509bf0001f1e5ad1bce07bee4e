//		janela.setTitle("Proativa");
//		
//		cenaCarregamento= new Scene(carregamento,900,600);
//		cenaCarregamento.getStylesheets().add(arquivosCSS);
		
//	}
	
	
	public static void main(String[] args) {
		launch(args);
	}
}
